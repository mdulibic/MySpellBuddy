<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyDictator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/light_coral</item>
        <item name="colorSecondary">@color/cg_blue</item>
        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="Theme.MyDictator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyDictator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyDictator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>